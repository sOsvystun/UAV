<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <ContentPage.BindingContext>
        <viewmodel:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="UAV Inspection System"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="15" ColumnSpacing="15">
                <StackLayout Grid.Column="0" Grid.Row="0">
                    <Label Text="RGB Camera Feed"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center" />
                    <Image Source="{Binding RgbCameraStream}"
                           Aspect="AspectFill"
                           HeightRequest="200"
                           BackgroundColor="Black" />
                </StackLayout>

                <StackLayout Grid.Column="1" Grid.Row="0">
                    <Label Text="Thermal Camera Feed"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center" />
                    <Image Source="{Binding ThermalCameraStream}"
                           Aspect="AspectFill"
                           HeightRequest="200"
                           BackgroundColor="Black" />
                </StackLayout>

                <StackLayout Grid.ColumnSpan="2" Grid.Row="1">
                    <Label Text="Drone Telemetry"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="Auto,*" RowSpacing="5" ColumnSpacing="10">
                        <Label Text="Altitude:" Grid.Column="0" FontSize="16" />
                        <Label Text="{Binding Altitude, StringFormat='{0} m'}" Grid.Column="1" FontSize="16" />

                        <Label Text="Latitude:" Grid.Column="0" Grid.Row="1" FontSize="16" />
                        <Label Text="{Binding Latitude}" Grid.Column="1" Grid.Row="1" FontSize="16" />

                        <Label Text="Longitude:" Grid.Column="0" Grid.Row="2" FontSize="16" />
                        <Label Text="{Binding Longitude}" Grid.Column="1" Grid.Row="2" FontSize="16" />

                        <Label Text="Speed:" Grid.Column="0" Grid.Row="3" FontSize="16" />
                        <Label Text="{Binding Speed, StringFormat='{0} m/s'}" Grid.Column="1" Grid.Row="3" FontSize="16" />

                        <Label Text="Battery Level:" Grid.Column="0" Grid.Row="4" FontSize="16" />
                        <Label Text="{Binding BatteryLevel, StringFormat='{0}%'}" Grid.Column="1" Grid.Row="4" FontSize="16" />
                    </Grid>
                </StackLayout>
            </Grid>

            <Button Text="Start Inspection"
                    Command="{Binding StartInspectionCommand}"
                    FontSize="18"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    HeightRequest="50" />

            <ActivityIndicator IsRunning="True"
                               IsVisible="{Binding IsLoading}"
                               HeightRequest="40"
                               HorizontalOptions="Center" />

            <ListView ItemsSource="{Binding InspectionResults}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding DefectType}"
                                       FontAttributes="Bold"
                                       FontSize="18" />
                                <Label Text="{Binding Confidence, StringFormat='Confidence: {0:P2}'}"
                                       FontSize="16" />
                                <Label Text="{Binding Recommendation}"
                                       FontSize="16"
                                       TextColor="Red" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ScrollView>
</ContentPage>
